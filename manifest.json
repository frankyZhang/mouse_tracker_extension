{
    "manifest_version": 2,
    
    "name": "Plugin",
    "description": "This is my first chrome extension",
    "version": "1.0",
    
    "permissions":[
        "tabs",
        "https://*.taobao.com/*",
        "https://*.tmall.com/*",
        "http://127.0.0.1:8000/*"
    ],
    
    "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
    
    "browser_action":{
        "default_title": "Click here",
        "default_popup": "1.html"
    },
    
    "content_scripts": [
    {
      "matches": ["https://*.taobao.com/*", "https://*.tmall.com/*", "http://127.0.0.1:8000/*"],
      "js": ["jquery-1.12.1.min.js", "content.js"],
      "run_at": "document_end"
    }
  ]
    
    

}